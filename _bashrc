GIT_PS1_SHOWDIRTYSTATE=1
PS1="${PS1%%\\$ }"'$(__git_ps1)'"\$ "

export EDITOR='vim'

# pip funziona solo se virtualenv attivati
export PIP_REQUIRE_VIRTUALENV=true


# eseguibili dei moduli node.js
NODE_MODULES_BIN_DIR="$HOME/node_modules/.bin"
if [[ -d $NODE_MODULES_BIN_DIR ]]; then
	 PATH="${PATH}:$NODE_MODULES_BIN_DIR"
fi
