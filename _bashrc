#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls='ls --color=auto'

GIT_PS1_SHOWDIRTYSTATE=1
PS1='[\A \u@\h \W]$(__git_ps1)\$ '

export EDITOR='vim'

# pip funziona solo se virtualenv attivati
export PIP_REQUIRE_VIRTUALENV=true


# eseguibili dei moduli node.js
NODE_MODULES_BIN_DIR="$HOME/node_modules/.bin"
[[ -d $NODE_MODULES_BIN_DIR ]] && PATH="${PATH}:$NODE_MODULES_BIN_DIR"
